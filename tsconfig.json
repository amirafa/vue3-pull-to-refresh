{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ESNext",
        "declaration": true,
        "declarationDir": "./dist",
        "emitDeclarationOnly": false,
        "outDir": "./dist",
        "moduleResolution": "bundler",
        "strict": true,
        "jsx": "preserve",
        "lib": ["ES2020", "DOM"],
        "types": ["vite/client"],
        "skipLibCheck": true
    },
    "include": [
        "lib/**/*.ts",
        "lib/**/*.d.ts",
        "lib/**/*.vue",
        "shims-vue.d.ts"
    ],
    "exclude": ["dist", "node_modules"]
}